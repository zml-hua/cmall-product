<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.tedu.csmall.product.mapper.AlbumMapper">

    <!-- -->
    <insert id="insertAlbum" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO pms_album (
           name, description, sort
        ) VALUES (
                     #{name}, #{description},#{sort}
                 )
    </insert>

    <delete id="deleteAlbumById">
        DELETE FROM pms_album WHERE id=#{id}
    </delete>

    <delete id="deleteAlbumByIds">
         DELETE FROM pms_brand WHERE id IN (
             <foreach collection="array" item="id" separator=",">
                #{id}
             </foreach>
             )
    </delete>

    <update id="updateAlbumById">
        UPDATE
           pms_album
        <set>
            <if test="name!= null" >
                name=#{name},
            </if>
            <if test="description!= null" >
                description=#{description},
            </if>
            <if test="sort!= null" >
                sort=#{sort},
            </if>
        </set>
        WHERE
        id=#{id}
    </update>

    <select id="countAlbum" resultType="int">
        SELECT count(*) FROM pms_album
    </select>


    <select id="getAlbumStandardById" resultMap="StandardResultMap">
        SELECT
            <include refid="StandardQueryFields"></include>
        FROM
            pms_brand
        WHERE
            id=#{id}
    </select>

    <sql id="StandardQueryFields">
        <if test="true">
            name, description, sort
        </if>
    </sql>

    <resultMap id="StandardResultMap" type="cn.tedu.csmall.product.pojo.vo.AlbumStandardVO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="sort" property="sort"/>
    </resultMap>

    <select id="list" resultMap="ListResultMap">
        SELECT
        <include refid="ListQueryFields" />
        FROM
        pms_brand
        ORDER BY
        sort DESC, id
    </select>

    <!--int countAlbumByName(String name);-->
    <select id="countAlbumByName" resultType="java.lang.Integer" >
        SELECT
           COUNT(*)
        FROM
           pms_album
        WHERE name=#{name}
    </select>

    <sql id="ListQueryFields">
        <if test="true">
            id, name, pinyin, logo, description,
            keywords, sort, sales, product_count, comment_count,
            positive_comment_count, enable
        </if>
    </sql>

    <resultMap id="ListResultMap" type="cn.tedu.csmall.product.pojo.vo.BrandListItemVO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="product_count" property="productCount"/>
        <result column="comment_count" property="commentCount"/>
        <result column="positive_comment_count" property="positiveCommentCount"/>
    </resultMap>

</mapper>